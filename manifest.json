{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "icons/block-nra-logo.svg",
    "128": "icons/block-nra-logo.svg"
  },
  "default_locale": "en",
   "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/block-nra-logo.svg",
      "38": "icons/block-nra-logo.svg"
    },
    "default_title": "#boycottNRA"
  }
}


